<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-4">
        <div class="card-body text-center">
          <h2 class="card-title"><%= @restaurant.name %></h2>
          <p class="card-text"><%= @restaurant.address %></p>
          <p class="card-text"><%= @restaurant.phone_number %></p>
          <p class="card-text"><%= @restaurant.category %></p>

          <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

          <h3 class="mt-4">Reviews</h3>

          <% @restaurant.reviews.each do |review| %>
            <p><%= review.content %> - <%= review.rating %> stars</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
